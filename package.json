{
  "name": "habitica-hubspot-gamify",
  "version": "1.0.0",
  "description": "PoC for integrating HubSpot call counts with Habitica gamification",
  "main": "src/orchestrator/index.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/web/server.js",
    "start:dev": "ts-node src/scheduler/cron.ts",
    "run:once": "ts-node src/orchestrator/index.ts",
    "run:once:dist": "node dist/orchestrator/index.js",
    "run:today": "ts-node src/orchestrator/index.ts",
    "run:date": "ts-node src/orchestrator/index.ts --date=",
    "report:today": "ts-node src/orchestrator/index.ts --report",
    "report:date": "ts-node src/orchestrator/index.ts --report --date=",
    "dry": "ts-node src/orchestrator/index.ts --dry-run --report",
    "reset:state": "node -e \"require('fs').writeFileSync('data/state.json', JSON.stringify({byDate:{},byMember:{}},null,2))\"",
    "backup:state": "node -e \"const fs=require('fs');const d=new Date().toISOString().slice(0,10);fs.mkdirSync('backup',{recursive:true});fs.copyFileSync('data/state.json', `backup/state-${d}.json`);console.log('backup -> backup/');\"",
    "web:dev": "ts-node src/web/server.ts",
    "web:start": "node dist/web/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "members:sync": "ts-node tools/resolve_owner_ids.ts",
    "members:sync:dist": "node dist/tools/resolve_owner_ids.js",
    "start:cron": "node dist/scheduler/cron.js",
    "start:web": "node dist/web/server.js",
    "start:both": "concurrently -k -n web,cron -c auto \"node dist/web/server.js\" \"node dist/scheduler/cron.js\""
  },
  "keywords": [
    "habitica",
    "hubspot",
    "gamification",
    "poc"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^9.2.1",
    "csv-parse": "^6.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "rate-limiter-flexible": "^7.2.0",
    "busboy": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "@types/busboy": "^1.5.4"
  }
}
