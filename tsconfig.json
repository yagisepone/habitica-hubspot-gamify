{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts","tools/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
